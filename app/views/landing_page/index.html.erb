<div id='gravatar'></div>
<div id='logo'></div>
<div id='search'>
  <div id='search_bar'>
    <%= form_tag do %>
      <%= text_field_tag "search", nil, :placeholder => 'e.g. Javascript Modal' %>
    <% end %>
  </div>
  <div id='language_box'>
    <% @languages.each do |language| %>
      <div class='language'>
        <span class='language_name'>
          <%= language.name %>
        </span>
        <div class='language_img'>
          <img src="/<%= language.code %>.png"/>
        </div>
      </div>
    <% end %>
  </div>
</div>

