<% if session[:id] %>
  <div id='gravatar'>
    <%= image_tag User.first.gravatar_url %>
  </div>
<% else %>
  <div id='session'>
    <a href="/login">Login </a>|
    <a href="/signup"> Signup</a>
  </div>
<% end %>
<div id='logo'>SnipIt</div>
<div id='search'>
  <div id='search_bar'>
    <%= form_tag do %>
      <%= text_field_tag "search", nil, :placeholder => 'e.g. Javascript Modal' %>
    <% end %>
  </div>
  <div id='language_box'>
    <% @languages.each do |language| %>
      <a href="/language/<%= language.code %>">
        <div class='language'>
          <span class='language_name'>
            <%= language.name %>
          </span>
          <div class='language_img'>
            <img class="image_icon" src="/assets/<%= language.code %>.png"/>
          </div>
        </div>
      </a>
    <% end %>
  </div>
</div>

